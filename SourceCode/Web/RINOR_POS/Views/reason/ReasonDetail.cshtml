@model RINOR_POS.Models.reasondetailViewModel

@{
    ViewBag.Title = "Reason Detail";
}

<div id="content">
    <!-- row -->
    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">

                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-pencil-square-o"></i>
                Reason Detail @Model.ReasonGroupName (@Model.ShopName)
                <span>
                    >
                    List
                </span>
            </h1>
        </div>

        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
            <!-- Button trigger modal -->
            <a type="button" class="btn btn-primary btn-lg pull-right header-btn hidden-mobile" href="#" onclick="InitData(0)"
               data-toggle="modal"><i class='fa fa-plus'></i> Reason Detail</a>
        </div>
    </div>
    <section>
        <div class="row">
            <div class="col-sm-12">
                <a class="btn btn-default btn-sm pull-right header-btn hidden-mobile" href="@Url.Action("Index", "reason", Request.Url.Scheme)"><i class='fa fa-arrow-circle-left'></i> Back to Reason Group</a>
            </div>
        </div>
    </section>
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">

                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Reason Detail List</h2>
                        @Html.HiddenFor(model => model.ReasonGroupID, new { id = "hdnGroupID" })
                        @Html.HiddenFor(model => model.ShopID, new { id = "ShopID" })
                    </header>
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <div class="widget-body no-padding">
                            <table class="table table-striped table-bordered table-hover" width="100%" id="table_basic">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ReasonText)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Ordering)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Activate)
                                        </th>
                                        <th width="10px">Edit</th>
                                        <th width="10px">Delete</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
    <!-- Modal -->
    <div class="modal fade" id="ReasonDetailModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <a class="close" data-dismiss="modal">&times;</a>
                    <h3>Reason Detail</h3>
                </div>
                <div class="modal-body">

                    <fieldset>
                        <fieldset>
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <br />
                            @Html.HiddenFor(model => model.ReasonGroupDetailID, new { id = "hdnID" })
                            <section>
                                <div class="row">
                                    <div class="col-md-1">
                                    </div>
                                    <div class="col-md-2">
                                        @Html.LabelRequiredFor(model => model.ReasonText, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-lg-8">
                                        <label class="input">
                                            @Html.EditorFor(model => model.ReasonText, new { htmlAttributes = new { id = "ReasonText", @class = "form-control col-lg-6", placeholder = "Reason Text" } })
                                            @Html.ValidationMessageFor(model => model.ReasonText, "", new { @class = "text-danger" })
                                        </label>
                                    </div>
                                </div>
                            </section>
                            <section>
                                <div class="row">
                                    <div class="col-md-1">
                                    </div>
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.Ordering, new { htmlAttributes = new { id = "Ordering", @class = "form-control" } })
                                    </div>
                                    <div class="col-md-2">
                                        <label class="input">
                                            @Html.EditorFor(model => model.Ordering, "1", new { htmlAttributes = new { @class = "form-control", placeholder = "Ordering" } })
                                        </label>
                                    </div>
                                </div>
                            </section>
                            <section>
                                <div class="row">
                                    <div class="col-md-1">
                                    </div>
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.Activate, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-lg-8">
                                        <span class="onoffswitch-title"></span> <span class="onoffswitch">
                                            <input type="checkbox" name="Activate" id="Activate" class="onoffswitch-checkbox" value="true" @(Model.Activate ? "checked=\"checked\"" : "") />
                                            <label class="onoffswitch-label" for="Activate">
                                                <span class="onoffswitch-inner" data-swchon-text="Yes" data-swchoff-text="No"></span>
                                                <span class="onoffswitch-switch"></span>
                                            </label>
                                        </span>
                                    </div>
                                </div>
                            </section>
                        </fieldset>
                    </fieldset>

                </div>
                <div class="modal-footer" style="height:80px">
                    <div class="form-group">
                        <a href="#" onclick="return SaveData()" class="btn btn-sm btn-primary">Save</a>
                        <a href="#" class="btn btn-sm btn-danger" data-dismiss="modal">Close</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section pagespecific {
    <script type="text/javascript">

        function DeleteData(id) {
            swal({
                title: "Are you sure want to Delete this data?",
                text: "(this process can\'t be undo)",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, Sure!",
                closeOnConfirm: false,
                closeOnEsc: false,
                closeOnCancel: false,
                showLoaderOnConfirm: true,
                preConfirm: () => {
                    return new Promise(() => {
                        //ajax side
                        swal({
                            title: 'Please wait... delete data in progress....',
                            onOpen: function () {
                                swal.showLoading()
                                $.ajax({
                                    type: "POST",
                                    url: baseURL + "reason/DeleteDetail/" + id,
                                    success: function (data) {
                                        if (data == "1") {
                                            swal.close();
                                            swal("Success", "Success Delete Data", "success");
                                            setTimeout(location.reload(true), 5000);
                                            //window.location.href = "/asset_registration/index";
                                        }
                                        else {
                                            swal("Failed", "Failed Delete Data", "error");
                                        }

                                    },
                                });
                            }
                        });
                    })
                },
                allowOutsideClick: () => !swal.isLoading()
            }).then((result) => {
                if (result.dismiss) {
                    swal("Cancel", "You Cancel Delete Data", "error");
                }
            });
        }

        $(document).ready(function () {
            document.getElementById("hdnID").value = 0;
            var id = document.getElementById("hdnGroupID").value;
            $('#table_basic').dataTable(
                {
                    "ajax": {
                        "url": baseURL + "reason/GetReasonDetailList/" + id,
                        "type": "GET",
                        "datatype": "json",
                    },
                    "dom": "<'dt-toolbar'<'col-xs-12 col-sm-6'f><'col-sm-6 col-xs-12 hidden-xs'l>r>" + "t"
                        + "<'dt-toolbar-footer'<'col-sm-6 col-xs-12 hidden-xs'i><'col-xs-12 col-sm-6'p>>",
                    "columns": [
                        { "data": "ReasonText", "autoWidth": true },
                        { "data": "Ordering", "autoWidth": true },
                        {
                            "data": "Activate",
                            "autowidth": true,
                            "mRender": function (data, type, full) {
                                if (full['Activate'] == true || full['Activate'] == null) {
                                    return '<i class="fa fa-check txt-color-green">';
                                } else if (full['Activate'] == false) {
                                    return '<i class="fa fa-times txt-color-red"></i>';
                                }
                            }
                        },
                        {
                            "data": "action",
                            "autowidth": true,
                            "mRender": function (data, type, full) {
                                return '<a href="#" onclick="InitData(' + full['ReasonGroupDetailID'] + ')" title="Edit"><i class="fa fa-pencil"></i></a>';
                            }
                        },
                        {
                            "data": "action",
                            "autowidth": true,
                            "mRender": function (data, type, full) {
                                return '<a href="#" onclick="DeleteData(' + full['ReasonGroupDetailID'] + ')" title="Delete"><i class="fa fa-trash-o txt-color-red"></i></a>';
                            }
                        }

                    ],
                    "order": [1, 'asc'],
                    "oLanguage": {
                        "sSearch": '<span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>'
                    }
                });
        });

        function InitData(id) {
            document.getElementById("hdnID").value = 0;
            document.getElementById("ReasonText").value = "";
            document.getElementById("Ordering").value = "";

            if (id > 0) {
                $.ajax({
                    type: "POST",
                    datatype: "json",
                    url: baseURL + "reason/GetDataEdit?id=" + id,
                    success: function (data) {
                        document.getElementById("hdnID").value = data.ReasonGroupDetailID;
                        document.getElementById("ReasonText").value = data.ReasonText;
                        document.getElementById("Ordering").value = data.Ordering;
                        document.getElementById("Activate").checked = data.Activate;
                        $('#ReasonDetailModal').modal('show');
                    },
                    error: function () { alert("Failed Get Data") }
                });
            }
            else {
                $('#ReasonDetailModal').modal('show');
            }
        };

        function SaveData() {
            let ID = document.getElementById("hdnGroupID").value;
            let Ordering = document.getElementById("Ordering").value;
            let ReasonGroupDetailID = document.getElementById("hdnID").value;
            let ReasonText = document.getElementById("ReasonText").value;
            let ShopID = document.getElementById("ShopID").value;
            let Activate = $('#Activate').is(":checked");

            var param = {
                ShopID: ShopID,
                ReasonGroupID: ID,
                ReasonGroupDetailID: ReasonGroupDetailID,
                ReasonText: ReasonText,
                Ordering: Ordering,
                Activate: Activate
            }
            $.ajax({
                type: "POST",
                url: baseURL + "reason/EditDetail",
                async: false,
                cache: false,
                data: JSON.stringify(param),
                contentType: "application/json; charset=utf-8",
                datatype: "json",
                success: function (data) {
                    if (data == "1") {
                        window.location.href = baseURL + "reason/ReasonDetail/" + ID;
                    }
                    else {
                        swal("Failed Save Data");
                    }
                }
            });
        };
    </script>
}
