@model RINOR_POS.Models.userroleViewModel

@{
    ViewBag.Title = "Group User Role";
}

<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
            <h1 class="page-title txt-color-blueDark">

                <!-- PAGE HEADER -->
                <i class="fa-fw fa fa-pencil-square-o"></i>
                Group User Role
                <span>
                    >
                    Setting
                </span>
            </h1>
        </div>
    </div>

    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-3" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-togglebutton="false" data-widget-collapsed="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Group User Role </h2>
                    </header>
                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">

                            @using (Html.BeginForm("Setting", "userrole", FormMethod.Post, htmlAttributes: new { @class = "smart-form", enctype = "multipart/form-data" }))
                            {
                                <header>
                                    New Data Form
                                </header>

                                <fieldset>
                                    <fieldset>
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <br />
                                        @Html.HiddenFor(model => model.UserRoleID)
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    @Html.LabelFor(model => model.MerchantId, htmlAttributes: new { @class = "control-label" })
                                                </div>
                                                <div class="col-lg-3">
                                                    <label class="input">
                                                        @Html.TextBoxFor(model => model.MerchantName, htmlAttributes: new { @readonly = "readonly" })
                                                    </label>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    @Html.LabelFor(model => model.BrandId, htmlAttributes: new { @class = "control-label" })
                                                </div>
                                                <div class="col-lg-3">
                                                    <label class="input">
                                                        @Html.TextBoxFor(model => model.BrandName, htmlAttributes: new { @readonly = "readonly" })
                                                    </label>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    @Html.LabelFor(model => model.ShopID, htmlAttributes: new { @class = "control-label" })
                                                </div>
                                                <div class="col-lg-3">
                                                    <label class="input">
                                                        @Html.TextBoxFor(model => model.ShopName, htmlAttributes: new { @readonly = "readonly" })
                                                    </label>
                                                </div>
                                            </div>
                                        </section>
                                        <section>
                                            <div class="row">
                                                <div class="col-md-1">
                                                </div>
                                                <div class="col-md-2">
                                                    @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "control-label" })
                                                </div>
                                                <div class="col-lg-3">
                                                    <label class="input">
                                                        @Html.EditorFor(model => model.Role, new { htmlAttributes = new { @class = "form-control col-lg-6", placeholder = "Role", @readonly = "readonly" } })
                                                    </label>
                                                </div>
                                            </div>
                                        </section>
                                    </fieldset>
                                </fieldset>
                                <header>
                                    Menu Access
                                </header>
                                <fieldset>
                                    <section>
                                        <div class="row">
                                            <div class="col-md-1">
                                            </div>
                                            <div class="col-md-10">
                                                <div class="widget-body no-padding">
                                                    <table class="table table-striped table-bordered table-hover" width="100%" id="table_basic">
                                                        <thead>
                                                            <tr>
                                                                <th hidden="hidden">
                                                                    ID
                                                                </th>
                                                                <th>
                                                                    Module
                                                                </th>
                                                                <th>
                                                                    Menu
                                                                </th>
                                                                <th>
                                                                    Read
                                                                </th>
                                                                <th>
                                                                    Create
                                                                </th>
                                                                <th>
                                                                    Update
                                                                </th>
                                                                <th>
                                                                    Approve
                                                                </th>
                                                                <th>
                                                                    Delete
                                                                </th>
                                                                @*<th></th>*@
                                                            </tr>
                                                        </thead>
                                                        @{
                                                            int i = 0;
                                                            foreach (var item in Model.menu_list)
                                                            {
                                                                <tbody>
                                                                    <tr>
                                                                        <td hidden="hidden">
                                                                            @Html.EditorFor(modelItem => modelItem.menu_list[i].menu_id, new { htmlAttributes = new { @id = "menu_id_" + i, @class = "form-control", @readonly = "readonly" } })
                                                                        </td>
                                                                        <td>
                                                                            @Html.EditorFor(modelItem => modelItem.menu_list[i].module_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                                        </td>
                                                                        <td>
                                                                            @Html.EditorFor(modelItem => modelItem.menu_list[i].menu_name, new { htmlAttributes = new { @id = "menu_name_" + i, @class = "form-control", @readonly = "readonly" } })
                                                                        </td>
                                                                        <td>
                                                                            @Html.CheckBoxFor(modelItem => modelItem.menu_list[i].CanRead, new { htmlAttributes = new { @id = "CanRead_" + i,  @class = "form-control"} })
                                                                        </td>
                                                                        <td>
                                                                            @Html.CheckBoxFor(modelItem => modelItem.menu_list[i].CanCreate, new { htmlAttributes = new { @id = "CanCreate_" + i, @class = "form-control" } })
                                                                        </td>
                                                                        <td>
                                                                            @Html.CheckBoxFor(modelItem => modelItem.menu_list[i].CanUpdate, new { htmlAttributes = new { @id = "CanUpdate_" + i, @class = "form-control" } })
                                                                        </td>
                                                                        <td>
                                                                            @Html.CheckBoxFor(modelItem => modelItem.menu_list[i].CanApproval, new { htmlAttributes = new { @id = "CanApproval_" + i, @class = "form-control" } })
                                                                        </td>
                                                                        <td>
                                                                            @Html.CheckBoxFor(modelItem => modelItem.menu_list[i].CanDelete, new { htmlAttributes = new { @id = "CanDelete_" + i, @class = "form-control" } })
                                                                        </td>
                                                                        @*<td>
                                                                                @Html.ActionLink("Save", "Setting", new { userroleid = Model.UserRoleID, menuid = item.menu_id })
                                                                            </td>*@
                                                                    </tr>
                                                                </tbody>
                                                                i++;
                                                            }
                                                        }
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                </fieldset>
                                <footer>
                                    <div class="form-group">
                                        <div class="col-md-7">
                                            @Html.ActionLink("Cancel", "Index", "userrole", htmlAttributes: new { @class = "btn btn-default" })
                                            <input type="submit" value="Save" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </footer>

                                                            }
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section pagespecific {
    <script type="text/javascript">

    </script>
}