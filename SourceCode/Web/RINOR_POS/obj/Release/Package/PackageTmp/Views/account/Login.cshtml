    ViewBag.PageClass = "animated fadeInDown";
}
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    @section topright{
        <div class="row text-responsive">

        </div>
        <!-- <span id="extr-page-header-space">

              <span class="hidden-mobile">Need an account?</span>
             <h1 style="font-weight:bold;font-size:16px; color:red;">INDONESIA HQ</h1>
             <a href="@Url.Action("Registration", "account")" class="btn btn-danger">Create account</a>
         </span>-->
    }
    <div id="content" class="container">
        <div class="row">
            @*{ Html.RenderPartial("_LoginText"); } *@
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-7" style="background-color:white ;vertical-align:middle; text-align:center; margin: auto; top: 0px; left: 0; right: 0; bottom: 0;">
                <div>
                    <h1><b>INDONESIA HQ</b></h1>
                    <br />
                    <img src="~/content/img/logoPOS.gif" alt="" height="197" width="340">
                </div>            
                @*<h1><b>INDONESIA HQ</b></h1>
                <br />
                <div class="slideshow-container">
                    <div class="mySlides">
                        <div class="numbertext">1 / 3</div>
                        <img src="~/content/img/logo.png" alt="">
                        <div class="text"></div>
                    </div>
                    <div class="mySlides">
                        <div class="numbertext">2 / 3</div>
                        <img src="~/content/img/logo2.png" alt="">
