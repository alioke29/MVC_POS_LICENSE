<div class="login-info">
    <span id="activity" class="activity-dropdown">
        <!-- <a href="javascript:void(0);" id="activity" class="activity-dropdown"> -->
        <a href="#" id="activity" class="activity-dropdown">
            <img src="~/content/img/avatars/sunny.png" alt="me" class="online" />
            <span>@RINOR_POS.ModelLicence.UserProfile.UserName</span>
            <i class="fa fa-angle-down"></i>
        </a>
    </span>
    <!-- AJAX-DROPDOWN : control this dropdown height, look and feel from the LESS variable file -->
    <div class="ajax-dropdown">

        <!-- the ID links are fetched via AJAX to the ajax container "ajax-notifications" -->

        <div class="btn-group btn-group-justified">
            <label class="btn btn-default">
                Your Login Information
            </label>
            <a href="@Url.Action("changepassword", "account")" class="btn btn-default btn-primary" target="_self">Change Password</a>
        </div>

        @*<div class="btn btn-group-sm"">
            <button class="btn btn-group-sm">
                <a href="@Url.Action("changepassword", "account")">Change Password</a>
            </button>
        </div>*@

        <!-- notification content -->
        <div class="ajax-notifications custom-scroll">
            <div class="alert alert-transparent table-responsive">
                @*<h4>Your Login Info</h4>*@
                @*<p>User ID : @RINOR_POS.ModelLicence.UserProfile.UserId; </p>
                    <p>User Name : @RINOR_POS.ModelLicence.UserProfile.UserName; </p>
                    <p>User Full Name : @RINOR_POS.ModelLicence.UserProfile.UserFullName; </p>
                    <p>Company Name : @RINOR_POS.ModelLicence.UserProfile.CompanyName; </p>
                    <p>Dept Name : @RINOR_POS.ModelLicence.UserProfile.DeptName; </p>
                    <p>Org ID : @RINOR_POS.ModelLicence.UserProfile.OrgId; </p>
                    <p>Employee ID : @RINOR_POS.ModelLicence.UserProfile.employee_id; </p>
                    <p>Employee Name : @RINOR_POS.ModelLicence.UserProfile.Employee; </p>*@
                <table class="table table-sm">
                    <tbody>
                        @if (RINOR_POS.ModelLicence.UserProfile.UserId > 0)
                        {
                            <tr>
                                <th scope="row">Login Id</th>
                                <td>@RINOR_POS.ModelLicence.UserProfile.UserId</td>
                            </tr>
                        }

                        @if (!string.IsNullOrWhiteSpace(RINOR_POS.ModelLicence.UserProfile.UserName))
                        {
                            <tr>
                                <th scope="row">Login Name</th>
                                <td>@RINOR_POS.ModelLicence.UserProfile.UserName</td>
                            </tr>
                        }

                        @if (@RINOR_POS.ModelLicence.UserProfile.pos_employee != null)
                        {
                            <tr>
                                <th scope="row">Employee NIK</th>
                                <td>
                                    @RINOR_POS.ModelLicence.UserProfile.pos_employee.employee_nik
                                </td>
                            </tr>

                            <tr>
                                <th scope="row">Employee Name</th>
                                <td>
                                    @RINOR_POS.ModelLicence.UserProfile.pos_employee.employee_name.ToUpper()
                                </td>
                            </tr>

                            <tr>
                                <th scope="row">Employee Email</th>
                                <td>
                                    @RINOR_POS.ModelLicence.UserProfile.pos_employee.employee_email
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <!-- end notification content -->
        <!-- footer: refresh area -->
        <span>
            Last updated on: 12-07-2019 9:43AM
            <button type="button" data-loading-text="<i class='fa fa-refresh fa-spin'></i> Loading..." class="btn btn-xs btn-default pull-right">
                <i class="fa fa-refresh"></i>
            </button>
        </span>
        <!-- end footer -->

    </div>
    <!-- END AJAX-DROPDOWN -->
</div>